  <%= form_for :log, :url => logs_path do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
        <div>
        <%= f.label :date %>
        <%= f.date_field :date %>
        </div>
        <div>
        <%= f.label :procedure, "Procedure/Skill" %>
        <%= f.select :procedure, [['Adult intubation'],['Paediatric Intubation'],['Rapid sequence induction'], ['CVC placement'], ['Spinal anaesthesia'], ['Epidural placement'], ['Other (please specify)']] %>
        </div>
        <div>
        <%= f.label :complications, "Any complications?" %>
        <%= f.text_field :complications %>
        </div>
        <div>
        <%= f.label :teaching, "Any element of teaching involved?" %>
        <%= f.select :teaching,[['PTO'],['Core trainer anaesthetics'],['Core trainee'], ['Nurse practitioner'], ['Other (please specify)']] %>
        </div>
      <div>
        <%= f.submit "Submit" %>
      </div>
  <% end %>


